<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.univr.mokamintminer.gui.GUIController"
      spacing="16"
      style="-fx-background-color: #FFFFFF;">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- TITOLO -->
    <Label text="Mokamint Desktop Miner"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #212121;"
           alignment="CENTER"/>

    <!-- ENDPOINT -->
    <HBox spacing="12">
        <Label text="Endpoint:" style="-fx-font-size: 16px; -fx-text-fill: #212121;"/>
        <TextField fx:id="endpointField"
                   promptText="es: http://localhost:8033"
                   style="-fx-font-size: 16px; -fx-pref-width: 300px;" />
    </HBox>

    <!-- PLOT SIZE -->
    <HBox spacing="12">
        <Label text="Plot size (MB):" style="-fx-font-size: 16px; -fx-text-fill: #212121;"/>
        <TextField fx:id="plotSizeField"
                   promptText="e.g. 1024"
                   style="-fx-font-size: 16px; -fx-pref-width: 150px;" />
    </HBox>

    <!-- PLOT KEY -->
    <HBox spacing="8" >
        <Label text="Plot key:" style="-fx-font-size: 16px; -fx-text-fill: #212121;"/>
        <TextField fx:id="plotKeyField"
                   promptText="plot key"
                   style="-fx-font-size: 16px; -fx-pref-width: 300px;"/>
    </HBox>

    <!-- CREATE PLOT -->
    <Button text="Create plot"
            onAction="#onCreatePlot"
            style="-fx-background-color: #6200EE; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8px;"
            maxWidth="Infinity"/>

    <!-- STATUS -->
    <Label fx:id="statusLabel"
           text="Status: waiting..."
           style="-fx-font-size: 14px; -fx-text-fill: #616161;"
           wrapText="true" />
</VBox>