<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.univr.mokamintminer.gui.GUIController"
      spacing="16"
      style="-fx-background-color: #FFFFFF;">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- TITOLO -->
    <Label text="Mokamint Desktop Miner"
           alignment="CENTER"
           style="-fx-font-size: 24px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #212121;"
           maxWidth="Infinity"/>

    <!-- ENDPOINT -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Node endpoint:"
               style="-fx-font-size: 16px;
                      -fx-text-fill: #212121;"/>
        <TextField fx:id="endpointField"
                   promptText="ws://localhost:8033"
                   style="-fx-font-size: 16px;
                          -fx-pref-width: 320px;" />
    </HBox>

    <!-- PLOT FILE -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Plot file"
               style="-fx-font-size: 16px;
                      -fx-text-fill: #212121;"/>
        <TextField fx:id="plotFileField"
                   promptText="plot.bin"
                   style="-fx-font-size: 16px;
                          -fx-pref-width: 320px;" />
    </HBox>

    <!-- CREATE PLOT BUTTON -->
    <Button fx:id="createPlotButton"
            text="Create plot"
            onAction="#onCreatePlot"
            maxWidth="Infinity"
            style="-fx-background-color: #6200EE;
                   -fx-text-fill: white;
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 8px;" />

    <!-- STOP PLOT BUTTON -->
    <Button fx:id="stopPlotButton"
            text="Stop plot"
            onAction="#onStopPlot"
            maxWidth="Infinity"
            style="-fx-background-color: #B00020;
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 8px;" />

    <!-- PROGRESS BAR -->
    <ProgressBar fx:id="progressBar"
                 progress="0"
                 maxWidth="Infinity"
                 style="-fx-accent: #6200EE;" />

    <!-- START / STOP MINING BUTTON -->
    <HBox spacing="12" alignment="CENTER" >
        <Button fx:id="startMiningButton"
                text="Start mining"
                onAction="#onStartMining"
                style="-fx-background-color: #03DAC5;
                       -fx-text-fill: black;
                       -fx-font-size: 14px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8px;" />

        <Button fx:id="stopMiningButton"
                text="Stop mining"
                onAction="#onStopMining"
                style="-fx-background-color: #B00020;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8px;" />
    </HBox>

    <!-- STATUS -->
    <Label fx:id="statusLabel"
           text="Status: waiting..."
           wrapText="true"
           style="-fx-font-size: 14px;
                  -fx-text-fill: #616161;"/>
</VBox>